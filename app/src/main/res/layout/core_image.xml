<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Color:"
        android:id="@+id/label"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:background="#ffffffff"
        android:layout_toStartOf="@+id/gray" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="375dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="matrix"
        style="@style/AppTheme"
        android:focusable="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brown"
        android:id="@+id/Brown"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/Blue"
        android:checked="false"
        android:layout_alignTop="@+id/Brown"
        android:layout_toEndOf="@+id/Brown"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/Red"
        android:checked="false"
        android:layout_alignBottom="@+id/Blue"
        android:layout_toEndOf="@+id/Blue"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:id="@+id/Yellow"
        android:checked="false"
        android:layout_alignBottom="@+id/Red"
        android:layout_toEndOf="@+id/Red"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purple"
        android:id="@+id/Purple"
        android:checked="false"
        android:layout_below="@+id/Yellow"
        android:layout_toEndOf="@+id/Green"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pink"
        android:id="@+id/Pink"
        android:checked="false"
        android:layout_below="@+id/Brown"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:id="@+id/Orange"
        android:checked="false"
        android:layout_below="@+id/Brown"
        android:layout_toEndOf="@+id/Pink"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/Green"
        android:checked="false"
        android:layout_alignBottom="@+id/Orange"
        android:layout_centerHorizontal="true"
        android:textSize="12dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray"
        android:id="@+id/gray"
        android:checked="false"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/Yellow"
        android:textSize="12dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black"
        android:id="@+id/BorW"
        android:checked="false"
        android:layout_alignTop="@+id/label"
        android:layout_alignParentEnd="true" />

